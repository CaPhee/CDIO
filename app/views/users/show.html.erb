<% provide :title, "Profile #{@user.name}" %>
<% provide :button_text, "Submit" %>
<div class="card hovercard" >
        <div class="card-background">
            <img class="card-bkimg" alt="" src="<%= @user.avatar%>">
        </div>
        <div class="useravatar">
            <%= show_avatar @user %>
        </div>

        <div class="card-info">
          <h2><%= @user.name%>  </h2>
        </div>

</div>
<div  class="panel btn-pref btn-group btn-group-justified " role="group" >

              <div class="tabnav">
                   <div class="btn-group btn-group-justified ">
                    <div class="btn-group" role="group" >
                        <button id="b1" type="button" class="btn-nav btn" href="#tab1" data-toggle="tab" >
                        <div class="visible" >Profile  <span class="glyphicon glyphicon-user" aria-hidden="true"> </span></div>
                         </button>
                      </div>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-nav" href="#tab2" data-toggle="tab" >
                         <div class="visible">Posts <span class="glyphicon glyphicon glyphicon-duplicate" aria-hidden="true"></span></div>
                        </button>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-nav" href="#tab3" data-toggle="tab">

                        <div class="visible">Favorites <span class="glyphicon glyphicon-heart" aria-hidden="true"></span></div>
                        </button>
                    </div>
                  <div class="btn-group" role="group">
                    <button type="button" class="btn btn-nav" href="#tab4" data-toggle="tab">
                             <div class="visible">Folower <span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
                        </button>
                    </div>


                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-nav" href="#tab5" data-toggle="tab">
                             <div class="visible">Following <span class="glyphicon glyphicon glyphicon-user" aria-hidden="true"></span></div>
                        </button>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-nav" href="#tab6" data-toggle="tab">
                            <div class="visible">Message <span class="glyphicon glyphicon-bell"  aria-hidden="true"></span></div>
                        </button>
                    </div>
                 </div>
              </div>
        <div  class="tab-content" style= "margin-top:10px; " >
              <div class="tab-pane panel  active" id="tab1"  >
                <div class="form-group" id="follow_form">
                  <%= render "users/follow_form" if logged_in? %>
                </div>
                    <div class="row">
                          <div class="col-md-6 col-md-offset-1" style= "margin-top: 20px; margin-bottom: 20px;" id="edit">
                            <%= render "profiletag" %>
                          </div>
                    </div>
               </div>
               <div class="tab-pane panel " id="tab2" >
                 <div class="content-container clearfix">
                     <div class="col-md-12">
                         <input type="search" placeholder="Search Post" class="form-control mail-search" />
                         <ul class="mail-list">
                          <% post = Post.all.where(user_id: @user) %>
                          <% post.each do |p| %>
                              <li>
                                     <%= link_to post_show_path(:id => p.id) do %>
                                      <b class="mail-sender"><%= p.title %></b>
                                     <span class="mail-subject"> Posted on  <%= p.created_at.strftime("%F") %> at <%=p.created_at.strftime("%I:%M%p") %></span>
                                     <span class="mail-message-preview">You have ten more subscriptions click her...</span>
                                      <%end %>
                             </li>
                          <%end %>
                          </ul>
                    </div>
                 </div>
                </div>
                <div class="tab-pane panel " id="tab3" >
                  <% @user.favorite_posts.each do |p| %>
                      <li>
                       <%= link_to post_show_path(:id => p.id) do %>
                        <b class="mail-sender"><%= p.title %></b>
                       <span class="mail-subject"> Posted on  <%= p.created_at.strftime("%F") %> at <%=p.created_at.strftime("%I:%M%p") %></span>
                       <span class="mail-message-preview">You have ten more subscriptions click her...</span>
                        <%end %>
                     </li>
                  <%end %>
                </div>
                <div class="tab-pane panel fade in " id="tab4" >
                    <% provide :search_id, "search_follows_box" %>
                    <% provide :path_search, user_followers_path(@user) %>
                    <% provide :type_follow, "followers" %>
                    <%= render "users/users", users: @followers %>
                </div>
                <div class="tab-pane panel fade in " id="tab5" >
                  <% provide :search_id, "search_follows_box" %>
                  <% provide :path_search, user_following_index_path(@user) %>
                  <% provide :type_follow, "following" %>
                  <%= render("users/users", users: @following) if @following%>
                </div>
                <div class="tab-pane panel fade in " id="tab6" >

                </div>
         </div>
      </div>
</div>
</div>
