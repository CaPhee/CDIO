<% if comment.user_id? %>
  <div class="media">
    <div class="pull-left" href="#">
        <%= show_avatar comment.user %>
    </div>
    <div class="media-body">
        <h4 class="media-heading"><%= comment.user.name %>
            <small><%= "#{time_ago_in_words(comment.created_at)} ago."%></small>
        </h4>
        <p><%= comment.comment %></p>
    </div>
  </div>
<% end %>
